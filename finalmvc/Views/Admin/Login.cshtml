@model finalmvc.Models.User
@{
    ViewData["Title"] = "Login"; Layout="_Layout";
}
<style>
h6{
    color:red;
    font-family:'Times new roman';
}
body{
    background-color:cadetblue;
}
h1{
    text-align:center;
}
</style>
<h1>Admin Login</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4 col-md-offset-5 align-center">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                <h6>@ViewBag.err</h6>
            }
            <div class="form-group">
                <label asp-for="username" class="control-label">Username</label>
                <input asp-for="username" class="form-control" required placeholder="Enter Username"/>
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pass" class="control-label">Password</label>
                <input asp-for="pass" type="password" class="form-control" required placeholder="Enter Password"/>
                <span asp-validation-for="pass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-warning btn-block" />
            </div>

        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
