@model flightreservation.Models.RouteDetail

@{
    Layout="AdminLayout";
    ViewData["Title"] = "Create";
}

<h1>Add new route</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Routeid" class="control-label"></label>
                <input asp-for="Routeid" type="number" class="form-control" />
                <span asp-validation-for="Routeid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flightid" class="control-label"></label>
                <input asp-for="Flightid" class="form-control" required/>
                <span asp-validation-for="Flightid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Routedesc" class="control-label"></label>
                <input asp-for="Routedesc" class="form-control" required/>
                <span asp-validation-for="Routedesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Route" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="getallRoutes">Back to Route List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
