@model flightreservation.Models.CustomerDetail

@{
    ViewData["Title"] = "Login";
}

<h1>Customer Login</h1>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customername" class="control-label">Customer Name</label>
                <input asp-for="Customername" class="form-control" required/>
                <span asp-validation-for="Customername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-warning btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Register">New to AirFlight? - Register now</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
